<h1>Edit Post</h1>
    <form method="post" action="/update/{{post._id}}" id="edit-post-form" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" id="title" name="title" value="{{post.title}}" required>

        <label for="content">Post</label>
        <textarea class="form-control"id="content" name="content" required rows="5" cols="30" required>{{post.content}}</textarea>

         <label for="media">Upload New Image for Media Path</label>
        <input type="file" id="media" name="media" accept="image/*">
    </div>
    </div>
    <button class="btn btn-primary" type="submit" name="button">update</button>
</form>