<!-- JavaScript Files -->
<script src="/javascript/script.js"></script>

{{> navibar}}
<main>
    <section class="container my-5">
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">Edit Profile</h2>
                        <form method="post" action="/updateProfile" id="edit-profile-form" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="profilePicture">Edit Profile Picture</label>
                                <input type="file" class="form-control-file" id="profilePicture" name="profilePicture" accept="image/*">
                            </div>

                            <div class="form-group">
                                <label for="bio">Edit Bio</label>
                                <textarea class="form-control" id="bio" name="bio" rows="5">{{profile.bio}}</textarea>
                            </div>

                            <button class="btn btn-primary" type="submit" name="button">Save Profile</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>